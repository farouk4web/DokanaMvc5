@using Dokana.Resources
@model Dokana.ViewModels.AddPhoneNumberViewModel
@{
    ViewBag.Title = ResourceKeys.phoneNumber;
}
<div class="phoneNumber">
    <div class="container">

        <form action="/Manage/AddPhoneNumber/" method="post" class="siteForm">
            <h2>@ResourceKeys.phoneNumber</h2>

            <div class="form-group">
                @Html.ValidationSummary(true)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Number, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Number, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Number)
            </div>

            <div class="form-group">
                @Html.AntiForgeryToken()
                <button type="submit" class="btn btn-primary">@ResourceKeys.addPhoneNumber</button>
            </div>
        </form>

    </div>
</div>

@section Styles{
    @Styles.Render("~/siteForm")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
