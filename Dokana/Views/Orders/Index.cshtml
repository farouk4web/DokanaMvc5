@using Dokana.Resources

@model IEnumerable<Dokana.Models.Order>
@{
    ViewBag.Title = ResourceKeys.myOrders;
}
<div class="myOrders">
    <div class="container">

        <div class="page-header">
            <h2>@ResourceKeys.orders</h2>
            <h5><b>@Model.Count()</b> @ResourceKeys.order</h5>
        </div>

        @if (Model.Count() == 0)
        {
            <div class="alert alert-info">
                <p class="lead">
                    @ResourceKeys.sorryMsg
                </p>
            </div>
        }

        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-sm-6">
                    @Html.Partial("_Order", order, new ViewDataDictionary(ViewData) { { "controllerName", "Orders" } })
                </div>
            }
        </div>

    </div>
</div>

@section styles {
    @Styles.Render("~/allOrders")
}
