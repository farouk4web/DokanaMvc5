@using Dokana.Resources
@model Dokana.ViewModels.ResetPasswordViewModel
@{
    ViewBag.Title = ResourceKeys.resetPassword;
}
<div class="resetPassword">
    <div class="container">

        <form action="/account/ResetPassword" method="post" class="siteForm">

            <h2>@ResourceKeys.resetPassword</h2>

            <div class="form-group">
                @Html.ValidationSummary(true)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "control-label" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "control-label" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.ConfirmPassword)
            </div>

            <div class="form-group">
                @Html.AntiForgeryToken()
                @Html.HiddenFor(model => model.Code)
                <button type="submit" class="btn btn-primary">@ResourceKeys.resetPassword</button>
            </div>

        </form>
    </div>
</div>

@section Styles {
    @Styles.Render("~/siteForm")
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
