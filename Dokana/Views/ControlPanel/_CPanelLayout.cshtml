@using Dokana.Resources

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - @ResourceKeys.appName</title>
    @if (UICulture == "ar-EG")
    {
        @Styles.Render("~/Content/css_rtl")
    }
    else
    {
        @Styles.Render("~/Content/css")
    }

    @Styles.Render("~/cPanel")

    @Styles.Render("~/fontAwesome")

    @RenderSection("styles", false)

    @Scripts.Render("~/bundles/modernizr")

</head>
<body>

    @Html.Action("GetNavbar", "Home")

    <main class="cPanel">
        <div class="container-fluid">
            <div class="row">

                <div class="col-sm-3">
                    @Html.Partial("_CpanelNav")
                </div>

                <div class="col-sm-9">
                    @RenderBody()
                </div>
            </div>
        </div>
    </main>


    @Html.Partial("_Footer")


    @Html.Partial("_jsVariables")

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/js/bootstrap")
    @Scripts.Render("~/js/bootbox")
    @Scripts.Render("~/js/cartActions")
    @Scripts.Render("~/js/favoritesActions")
    @Scripts.Render("~/js/stylesMode")
    @Scripts.Render("~/js/site")

    @RenderSection("scripts", required: false)
</body>
</html>
