@using Dokana.Resources

@model IEnumerable<Dokana.Models.Category>

<ul class="nav navbar-nav navbar-right categoriesInMenu">

    <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
            <i class="glyphicon glyphicon-menu-hamburger"></i> <span> @ResourceKeys.categories</span>
        </a>
        <ul class="dropdown-menu">
            @foreach (var category in Model)
            {
                <li>
                    <a href="/Categories/details/@category.Id" class="text-capitalize">
                        @category.Name
                    </a>
                </li>
            }
            @if (Model.Count() == 0)
            {
                <li class="sorryMsg">
                    @ResourceKeys.sorryMsg
                </li>
            }
        </ul>
    </li>

</ul>