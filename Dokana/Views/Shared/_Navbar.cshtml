@using Dokana.Resources

@model Dokana.ViewModels.NavbarViewModel

<div class="navbar navbar-default navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            <a href="/Home/" class="navbar-brand">@ResourceKeys.appName</a>
        </div>

        <div class="navbar-collapse collapse">

            @Html.Partial("_ShoppingCart", Model.CartItems)
            @Html.Partial("_AccountNavLinks")
            @Html.Partial("_Categories", Model.Categories)
            @Html.Partial("_SearchForm")

        </div>
    </div>
</div>
