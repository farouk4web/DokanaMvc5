@using Dokana.Resources
@model Dokana.ViewModels.HomeViewModel
@{
    ViewBag.Title = ResourceKeys.home;
    if (Model.SliderProducts.Count() == 0)
    {
        Model.SliderProducts = Model.LastProducts;
    }
}

<div class="home">

    <div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators hidden-xs">

            @for (int i = 0; i < Model.SliderProducts.Count(); i++)
            {
                var className = " ";
                if (i == 0)
                {
                    className = "active";
                }

                <li data-target="#carousel-example-generic" data-slide-to="@i" class="@className"></li>
            }
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">

            @foreach (var product in Model.SliderProducts)
            {
                var className = " ";
                if (product.Id == Model.SliderProducts.First().Id)
                {
                    className = "active";
                }

                <div class="item @className">
                    <img src="@product.ImageSrc" alt="...">
                    <div class="carousel-caption">
                        <a href="/Products/details/@product.Id">@product.Name</a>
                    </div>
                </div>
            }

        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>

    <section class="intro">
        <div class="container">
            <h1>@ResourceKeys.appName</h1>
            <p class="lead">
                @ResourceKeys.appMetaDescription
            </p>
        </div>
    </section>

    <div class="container">

        <section class="latest_products">
            <h2>@ResourceKeys.latestProductsAdded</h2>
            <div class="row">
                @foreach (var product in Model.LastProducts)
                {
                    <div class="col-sm-4 col-md-2">
                        @Html.Partial("_Product", product)
                    </div>
                }
            </div>
        </section>

        <section class="best_seller">
            <h2>@ResourceKeys.bestSellerProducts</h2>
            <div class="row">
                @foreach (var product in Model.BestSeller)
                {
                    <div class="col-sm-4 col-md-2">
                        @Html.Partial("_Product", product)
                    </div>
                }
            </div>
        </section>


        <section class="why_us">
            <h2>@ResourceKeys.whyUs</h2>
            <div class="row">
                <div class="col-sm-3">
                    <div class="item">
                        <i class="fa fa-opencart"></i>
                        <h3>@ResourceKeys.allProducts</h3>
                        <p>
                            @ResourceKeys.allProductsDescription
                        </p>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="item">
                        <i class="fa fa-flash"></i>
                        <h3>@ResourceKeys.fastShipping</h3>
                        <p>
                            @ResourceKeys.fastShippingDescription
                        </p>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="item">
                        <i class="fa fa-dollar"></i>
                        <h3>@ResourceKeys.cheap</h3>
                        <p>
                            @ResourceKeys.cheapDescription
                        </p>
                    </div>
                </div>

                <div class="col-sm-3">
                    <div class="item">
                        <i class="fa fa-support"></i>
                        <h3>@ResourceKeys.support</h3>
                        <p>
                            @ResourceKeys.supportDescription
                        </p>
                    </div>
                </div>
            </div>

        </section>

        <section class="contact">
            <h2>@ResourceKeys.contactWithUs</h2>
            <div class="area">
                <div class="row">
                    <div class="col-sm-6">
                        <address>
                            @ResourceKeys.address: @ResourceKeys.addressOfCompany
                        </address>

                        <p>
                            @ResourceKeys.email: <a href="mail:faroukAbdelhamid.eg@gmail.com">@ResourceKeys.emailOfCompany</a>
                        </p>
                    </div>

                    <div class="col-sm-6">
                        <div class="social text-center">
                            <a href="https://Linkedin.com/in/dokana" target="_blank">
                                <i class="fa fa-linkedin"></i>
                            </a>

                            <a href="https://facebook.com/dokana" target="_blank">
                                <i class="fa fa-facebook"></i>
                            </a>

                            <a href="https://twitter.com/dokana" target="_blank">
                                <i class="fa fa-twitter"></i>
                            </a>

                            <a href="https://youtube.com/dokana" target="_blank">
                                <i class="fa fa-youtube"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>

        </section>

    </div>
</div>


@section styles {
    @Styles.Render("~/home")
}
